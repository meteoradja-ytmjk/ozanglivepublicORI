            extend: {
              colors: {
                'primary': '#8B5CF6',
                'secondary': '#7C3AED',
                'accent': '#A78BFA',
                'dark': {
                  '900': '#0F172A',
                  '800': '#1E293B',
                  '700': '#334155',
                  '600': '#475569',
                  '500': '#64748B',
                  '400': '#94A3B8',
                  '300': '#CBD5E1',
                  '200': '#E2E8F0',
                  '100': '#F1F5F9',
                },
                'gray': {
                  '900': '#0F172A',
                  '800': '#1E293B',
                  '700': '#334155',
                  '600': '#475569',
                  '500': '#64748B',
                  '400': '#94A3B8',
                  '300': '#CBD5E1',
                  '200': '#E2E8F0',
                  '100': '#F1F5F9',
                  '50': '#F8FAFC',
                }
              }
            }
          }
        }
      </script>
      <script src="/js/stream-modal.js" defer></script>
      <script>
        document.addEventListener('DOMContentLoaded', function () {
          if (document.fonts && document.fonts.ready) {
            document.fonts.ready.then(function () {
              document.querySelectorAll('.ti').forEach(function (icon) {
                icon.classList.add('font-loaded');
              });
            });
          } else {
            setTimeout(function () {
              document.querySelectorAll('.ti').forEach(function (icon) {
                icon.classList.add('font-loaded');
              });
            }, 100);
          }
        });
      </script>
</head>

<body class="bg-dark-900 text-white font-inter">
  <!-- Mobile Header -->
  <div
    class="lg:hidden fixed top-0 left-0 right-0 h-16 bg-dark-800 shadow-lg flex items-center justify-between px-4 z-30">
    <div class="flex items-center">
      <img src="/images/logo_mobile.svg" alt="StreamFlow Logo" class="h-8">
    </div>
    <div class="flex items-center gap-2">
      <a href="https://wa.me/6289621453431" target="_blank"
        class="flex items-center gap-1 h-6 text-green-500 hover:text-green-400 transition-colors" title="WhatsApp">
        <span class="text-xs font-medium">Admin</span>
        <i class="ti ti-brand-whatsapp text-xl"></i>
      </a>
      <a href="https://link.dana.id/minta?full_url=https://qr.dana.id/v1/281012012021122332030646" target="_blank"
