<style>
  /* Mobile viewport fix */
  html,
  body {
    overflow-x: hidden;
    width: 100%;
    min-height: 100%;
    -webkit-overflow-scrolling: touch;
  }

  #profile-dropdown {
    position: fixed;
    z-index: 100;
    min-width: 220px;
    border-radius: 8px;
    bottom: 80px;
    left: 15px;
  }

  /* Desktop logo overflow styling - CANGGIH! */
  .desktop-logo-container {
    position: absolute !important;
    top: 10px;
    left: 8px;
    overflow: visible !important;
    width: auto !important;
    height: auto !important;
    z-index: 50;
  }

  .desktop-logo {
    position: relative;
    width: auto !important;
    height: 32px !important;
    max-width: none !important;
    filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.3));
  }

  #profile-dropdown.hidden {
    opacity: 0;
    pointer-events: none;
    visibility: hidden;
  }

  .text-logout {
    color: #FF5555;
  }

  .text-logout:hover {
    color: #FF7777;
  }

  .kirim-tip-button {
    border-radius: 5px;
    background: linear-gradient(45deg, #8B5CF6, #A78BFA);
  }

  .bottom-nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex: 1;
    padding: 8px 0;
    color: #8F8F8F;
    font-size: 11px;
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
    user-select: none;
  }

  .bottom-nav-item i {
    font-size: 22px;
    margin-bottom: 4px;
  }

  .bottom-nav-active {
    color: #8B5CF6;
  }

  /* Mobile profile popup */
  #mobile-profile-popup {
    z-index: 100;
  }

  #mobile-profile-btn {
    position: relative;
    z-index: 31;
  }

  /* Mobile specific fixes */
  @media (max-width: 1023px) {
    body {
      padding-top: 64px;
      /* Height of mobile header */
      padding-bottom: 64px;
      /* Height of bottom nav */
    }

    .min-h-screen {
      min-height: calc(100vh - 128px) !important;
      padding-bottom: 0 !important;
    }

    /* Ensure content is scrollable */
    .flex-1 {
      overflow-y: auto;
      -webkit-overflow-scrolling: touch;
    }
  }

  /* Fix for iOS Safari */
  @supports (-webkit-touch-callout: none) {
    body {
      min-height: -webkit-fill-available;
    }
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Desktop profile dropdown
    const profileButton = document.getElementById('profile-menu-button');
    const profileDropdown = document.getElementById('profile-dropdown');
    if (profileButton && profileDropdown) {
      profileButton.addEventListener('click', (e) => {
        e.stopPropagation();
        profileDropdown.classList.toggle('hidden');
      });
      document.addEventListener('click', (e) => {
        if (!profileDropdown.contains(e.target) && !profileButton.contains(e.target)) {
          profileDropdown.classList.add('hidden');
        }
      });
    }

    // Mobile profile popup - Fixed for touch devices
    const mobileProfileBtn = document.getElementById('mobile-profile-btn');
    const mobileProfilePopup = document.getElementById('mobile-profile-popup');

    if (mobileProfileBtn && mobileProfilePopup) {
      // Toggle popup on click/touch
      mobileProfileBtn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();

        const isVisible = mobileProfilePopup.style.display === 'block';

        if (isVisible) {
          mobileProfilePopup.style.display = 'none';
        } else {
          mobileProfilePopup.style.display = 'block';
        }
      });

      // Also handle touchend for better mobile response
      mobileProfileBtn.addEventListener('touchend', (e) => {
        e.preventDefault();
        e.stopPropagation();

        const isVisible = mobileProfilePopup.style.display === 'block';

        if (isVisible) {
          mobileProfilePopup.style.display = 'none';
        } else {
          mobileProfilePopup.style.display = 'block';
        }
      }, { passive: false });

      // Close popup when clicking outside
      document.addEventListener('click', (e) => {
        if (!mobileProfilePopup.contains(e.target) && !mobileProfileBtn.contains(e.target)) {
          mobileProfilePopup.style.display = 'none';
        }
      });

      // Close popup when touching outside
      document.addEventListener('touchstart', (e) => {
        if (!mobileProfilePopup.contains(e.target) && !mobileProfileBtn.contains(e.target)) {
          mobileProfilePopup.style.display = 'none';
        }
      }, { passive: true });
    }
  });
</script>