          <i class="ti ti-live-photo text-xl"></i>
          <span class="text-xs mt-1">Streams</span>
          <span class="sidebar-tooltip group-hover:scale-100">Stream Manager</span>
        </a>
        <a href="/gallery" class="sidebar-icon group <%= active === 'gallery' ? 'bg-primary' : '' %>">
          <i class="ti ti-folder-filled text-xl"></i>
          <span class="text-xs mt-1">Gallery</span>
          <span class="sidebar-tooltip group-hover:scale-100">Video Gallery</span>
        </a>
        <a href="/playlist" class="sidebar-icon group <%= active === 'playlist' ? 'bg-primary' : '' %>">
          <i class="ti ti-list-details text-xl"></i>
          <span class="text-xs mt-1">Playlist</span>
          <span class="sidebar-tooltip group-hover:scale-100">Playlist Manager</span>
        </a>
        <a href="/youtube" class="sidebar-icon group <%= active === 'youtube' ? 'bg-red-500' : '' %>">
          <i class="ti ti-brand-youtube text-xl"></i>
          <span class="text-xs mt-1">YouTube</span>
          <span class="sidebar-tooltip group-hover:scale-100">YouTube Sync</span>
        </a>
